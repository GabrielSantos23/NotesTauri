{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Notes",
  "version": "0.2.3",
  "identifier": "com.notes.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "transparent": true,
        "decorations": false,
        "title": "Notes",
        "resizable": true,
        "fullscreen": false,
        "width": 1200,
        "height": 800,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https: http:; connect-src 'self' https: http:; img-src 'self' data: https: http:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@x2.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/GabrielSantos23/NotesTauri/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJBNUY1MUI3MTM4QzBERTMKUldUakRZd1R0MUZmS3BZU2VQQWJmK21JK21ra2N6K1lUZzhBRnFwWVhObGFxZ2VnSmVoUXBiSm8K",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
